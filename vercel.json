{
  "rewrites": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "site1.myapp.vercel.app" }],
      "destination": "/site1/$1"
    },
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "site2.myapp.vercel.app" }],
      "destination": "/site2/$1"
    }
  ]
}
